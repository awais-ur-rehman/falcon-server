{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "src/config/swagger.js",
    "src/api/services/facebook/webhookService.js",
    "src/api/services/instagram/webhookService.js"
  ],
  "exclude": ["node_modules"]
}
